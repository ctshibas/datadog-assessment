<body>
    <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <h1 class="side-2-side">#<%= villager.id %>: <%= villager.name['name-USen'] %></h1>
            <img class="icon-mini" src="<%= villager.icon_uri %>" alt="<%= villager.name['name-USen'] %>">
            <hr>
            <div class="image">
                <img src="<%= villager.image_uri %>" alt="<%= villager.name['name-USen'] %>">
            </div>
            <h2>
                Species: <%= villager.species %>
            </h2>
            <p>
                Gender: <%= villager.gender %><br>
                <%= villager.name['name-USen'] %>'s Birthday: <%= villager['birthday-string']%><br>
                Go-to Hobby: <%= villager.hobby %><br>
                Favorite Quote: "<%= villager.saying %>"<br>
                Catch-phrase: "<%= villager['catch-phrase'] %>"<br>
                Subtype (?): <%= villager.subtype %><br>


            </p>
        </main>
    <%- include('../includes/end.ejs') %>